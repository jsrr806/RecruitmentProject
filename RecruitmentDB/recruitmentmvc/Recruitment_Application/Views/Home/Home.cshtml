@{
    ViewBag.Title = "HomePage";
}

<title>Recruitment HomePage</title>

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inconsolata">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>

    body, html {
        width: 100%;
        height: 100%;
        font-family: "Inconsolata", sans-serif;
    }

    .menu {
        display: none;
    }

    img {
        max-height: 100%;
        max-width: 100%;
    }

    .nav-item:hover {
        color: black;
    }
</style>
<body>

    <!-- Links (sit on top) -->
    <div class="navbar navbar-inverse navbar-fixed-top w3-black">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="@Url.Action("Home","Home")">
                    <img src="" width="130" height="80" />
                </a>
            </div>
            <ul style="padding-top:20px" class="nav nav-justified nav-fill">
                <li><a href="#about" class="w3-button w3-block w3-black">ABOUT US</a></li>
                <li><a href="#contact" class="w3-button w3-block w3-black">Contact Us</a></li>
                <li><a href="@Url.Action("Login","Login")" class="w3-button w3-block w3-black">Login</a></li>
            </ul>
        </div>
    </div>


    <!-- Add a background color and large text to the whole page -->
    <div class="w3-white  w3-large" style="width:100%;">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div id="imageCarousel" class="carousel slide" data-interval="1500"
                         data-ride="carousel" data-pause="hover" data-wrap="true">

                        <ol class="carousel-indicators">
                            <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#imageCarousel" data-slide-to="1"></li>
                            <li data-target="#imageCarousel" data-slide-to="2"></li>
                        </ol>

                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="" class="img-responsive" style='height: 100%; width: 100%; object-fit: contain'>


                            </div>
                            <div class="item">
                                <img src="" class="img-responsive" style='height: 100%; width: 100%; object-fit: contain' />

                            </div>
                            <div class="item">
                                <img src="" class="img-responsive" style='height: 100%; width: 100%; object-fit: contain' />

                            </div>

                        </div>

                        <a href="#imageCarousel" class="carousel-control left" data-slide="prev">
                            <span class="glyphicon glyphicon-hand-left"></span>
                        </a>
                        <a href="#imageCarousel" class="carousel-control right" data-slide="next">
                            <span class="glyphicon glyphicon-hand-right"></span>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="w3-container" id="about">
        <div class="w3-content" style="max-width:1000px">
            <h5 class="w3-center w3-padding-64"><span class="w3-tag w3-wide">ABOUT US</span></h5>
            <p>

            </p>
            <div class="w3-panel w3-leftbar w3-light-grey">
            </div>
        </div>
    </div>


    <div class="w3-container" id="contact">
        <div class="w3-content" style="max-width:1000px">
            <h5 class="w3-center w3-padding-64"><span class="w3-tag w3-wide">CONTACT US</span></h5>
            <p>
                <div class="ttcContent default">
                    <div id="c77441" class="frame frame-default frame-type-html frame-layout-0">
                        <div>
                            <div class="w3-panel w3-leftbar w3-light-grey">
                                <div class="table">
                                    <ul class="nav nav-justified nav-fill">
                                        <li style="width: 80px; padding-top:40px">
                                            <h2 style="font-family:'Times New Roman', Times, serif">Find us on</h2>
                                        </li>
                                        <li class="nav-item">
                                            <a href="" title="facebook" class="w3-button w3-block"><i class="fa fa-facebook-square fa-4x" style="color:blue"></i></a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="" title="linkedin" class="w3-button w3-block"><i class="fa fa-linkedin-square fa-4x" style="color:blue"></i></a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="" title="twitter" class="w3-button w3-block"><i class="fa fa-twitter-square fa-4x" style="color:blue"></i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </p>
        </div>
    </div>
</body>




